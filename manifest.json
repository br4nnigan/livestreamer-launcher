{
	"manifest_version": 2,
	"name": "Livestreamer Launcher",
	"version": "1.1",
	"applications": {
		"gecko": {
			"id": "livestreamer@czxzyyyk.de",
			"strict_min_version": "45.0"
		}
	},
	"description": "Launches livestreamer via context menu.",
	"author": "czxzyyyk",
	"browser_action": {
		"browser_style": true,
		"default_icon": {
			"16": "button/geo-16.png",
			"32": "button/geo-32.png"
		},
		"default_title": "Whereami?",
		"default_popup": "html/popup.html"
	},
	"content_scripts": [
		{
			"matches": [
				"<all_urls>",
				"*://*.youtube.com/*",
				"*://*.youtu.be/*",
				"*://*.twitch.tv/*"
			],
			"js": [
				"lib/main.js"
			],
			"run_at": "document_start"
		}
	],
	"options_ui": {
		"page": "html/options.html"
	}
}